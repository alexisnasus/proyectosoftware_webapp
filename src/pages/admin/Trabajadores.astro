---
import Layout from '../../layouts/Layout.astro';
import AdminNavbar from '../../components/admin/AdminNavbar.astro';
---

<Layout title="Interfaz del Admin">
  <div class="min-h-screen bg-gray-100">
    <AdminNavbar />
    
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <h1 class="text-2xl font-bold text-gray-800 mb-8">Lista de Trabajadores</h1>
      
      <ul class="space-y-4">
        {['Trabajador 1', 'Trabajador 2', 'Trabajador 3', 'Trabajador 4'].map((trabajador) => (
          <li class="bg-white hover:bg-gray-50 transition-colors duration-200 rounded-lg shadow-sm">
            <a href="#" class="flex items-center justify-between p-4">
              <div class="flex items-center space-x-4">
                <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 font-medium">
                  {trabajador.split(' ')[1]}
                </div>
                <span class="font-medium text-gray-800">{trabajador}</span>
              </div>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
            </a>
          </li>
        ))}
      </ul>
      
      <div class="mt-8 flex justify-center">
        <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
          Editar trabajadores
        </button>
      </div>
    </div>
  </div>
</Layout>